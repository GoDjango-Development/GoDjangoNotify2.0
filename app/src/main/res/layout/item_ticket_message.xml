<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ticket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_ticket"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/background_header">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Casa Piedra \n-\n Javier del toro"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnPrimary"
                    android:textStyle="bold"
                    android:paddingVertical="5dp"
                    android:lineSpacingExtra="-5sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="New"
                        android:id="@+id/tv_config"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:drawableLeftCompat="@drawable/baseline_handyman_24" />
                    <TextView
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="folder"
                        android:id="@+id/tv_folder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:drawableLeftCompat="@drawable/baseline_folder_24" />
                    <TextView
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="53728705 \n77664106"
                        android:id="@+id/tv_telf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:drawableLeftCompat="@drawable/baseline_local_phone_24" />
                    <TextView
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="Edificio 66 apto 6"
                        android:id="@+id/tv_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:drawableLeftCompat="@drawable/baseline_location_on_24" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="• 1x Arroz Frito: $131.0
                                        \n• 1x Bistec de Cerdo: $168.0"
                            android:id="@+id/tv_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:drawableLeftCompat="@drawable/ic_baseline_message_24" />
                        </RelativeLayout>
                    <TextView
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="299.0"
                        android:id="@+id/tv_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:drawableLeftCompat="@drawable/baseline_attach_money_24" />
                    <TextView
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="2022-07-10 11:20:55.101262-04:00"
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:drawableLeftCompat="@drawable/baseline_calendar_today_24" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:layout_width="match_parent"
                android:layout_height="5dp"
            android:layout_marginTop="-6dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
                android:src="@drawable/punteado" />
        <LinearLayout
            android:layout_marginTop="-12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/background_ticket">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <ImageButton
                        android:id="@+id/btn_call"
                        android:layout_margin="5dp"
                        android:background="@drawable/background_ticket"
                        android:src="@drawable/baseline_local_phone_24"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <ImageButton
                        android:id="@+id/btn_whatsapp"
                        android:layout_margin="5dp"
                        android:background="@drawable/background_ticket"
                        android:src="@drawable/whatsapp_glyph_black_logo"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                    <ImageButton
                        android:id="@+id/btn_whatsapp_b"
                        android:layout_margin="5dp"
                        android:background="@drawable/background_ticket"
                        android:src="@drawable/business_whatsapp_icon"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                    <ImageButton
                        android:id="@+id/btn_copy"
                        android:layout_margin="5dp"
                        android:background="@drawable/background_ticket"
                        android:src="@drawable/baseline_content_copy_24"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                    <ImageButton
                        android:id="@+id/btn_archive"
                        android:layout_margin="5dp"
                        android:background="@drawable/background_ticket"
                        android:src="@drawable/baseline_archive_24"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>